let
   var month: Integer;
   var days: Integer;
   var leap: Boolean
in
   begin
      leap := false;
      getint(var month);
      case month of
         2: days := if leap then 29 else 28; 
         4: days := 30;
         6: days := 30;
         9: days := 30;
        11: days := 30;
      else: days := 31;
      putint(days)
   end